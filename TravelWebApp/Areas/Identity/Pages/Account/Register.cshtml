            <form method="post">
                <div class="col-md-6 agilecontactw3ls-grid agilecontactw3ls-grid-1" style="left: 25%">
                    <input asp-for="Input.Name" placeholder="Имя" required="">
                    <input asp-for="Input.Surname" placeholder="Фамилия" required="">
                    <input asp-for="Input.Email" placeholder="Электронный адрес" required="">

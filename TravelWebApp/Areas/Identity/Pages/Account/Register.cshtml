                    <input asp-for="Input.Password" placeholder="Пароль" required="">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <input asp-for="Input.ConfirmPassword" placeholder="Повторите пароль" required="">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    <input asp-for="Input.isSubscriber" id="check">
                    <label for="check" style="color: white">Подписаться на рассылку</label><br>
                    <input type="submit" value="Зарегистрироваться" style="font-size: 30px; color: white; background: center;">
